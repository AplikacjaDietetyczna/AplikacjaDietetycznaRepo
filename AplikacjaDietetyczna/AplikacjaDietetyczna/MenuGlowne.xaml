            <Border CornerRadius="5"  Height="700" Margin="0,0,0,-0.4" VerticalAlignment="Bottom">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#7be9f6" Offset="0.0"/>
                        <GradientStop Color="#1225ff" Offset="1.5"/>
                    </LinearGradientBrush>
                   
                </Border.Background>
            </Border>
            <TextBlock x:Name="PokazID" HorizontalAlignment="Left" Margin="366,165,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="196" Width="357" FontSize="48" Loaded="PokazID_Loaded"/>
