                <TextBox FontFamily="Helvetica"
                         x:Name="Lunch"
                         FontSize="25"
                         FontWeight="Light"
                         HorizontalAlignment="Center"
                         HorizontalContentAlignment="Left"
                         Background="Transparent"
                         Foreground="Black"
                         BorderThickness="0"
                         Width="158"
                         Opacity="0.8"
                         Text="Lunch" Margin="34,226,1027.8,304"
