                         HorizontalContentAlignment="Left"
                         Background="Transparent"
                         Foreground="Black"
                         BorderThickness="0"
                         Width="299"
                         Opacity="0.5"
                         Text="Weglowodany:"
                         Height="25" Margin="823,26,98,24" 
                         IsReadOnly="True"/>

