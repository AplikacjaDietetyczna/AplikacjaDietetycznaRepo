                <Viewbox Margin="75,174,854,212">
                    <Calendar x:Name="Kalendarz" SelectionMode="SingleDate" SelectedDatesChanged="Calendar_SelectedDatesChanged" />
                </Viewbox>

            </Grid>



        </Grid>




    </Grid>
</UserControl>
